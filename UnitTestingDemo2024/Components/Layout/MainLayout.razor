@inherits LayoutComponentBase

<HxMessenger Position="ToastContainerPosition.BottomCenter" />
<HxMessageBoxHost />

<div class="d-md-flex min-vh-100">
	<ErrorBoundary @ref="_errorBoundaryComponent">
		<ErrorContent Context="exception">
			<div class="main p-4 flex-grow-1">
				<GenericError Exception="exception" OnRecover="() => _errorBoundaryComponent?.Recover()" />
			</div>
		</ErrorContent>
		<ChildContent>
			<Sidebar />
			<div class="main p-4 flex-grow-1">
				@Body
			</div>
		</ChildContent>
	</ErrorBoundary>
</div>

<div id="blazor-error-ui">
	An unhandled error has occurred.
	<a href="" class="reload">Reload</a>
	<a class="dismiss">🗙</a>
</div>
